<?xml version="1.0"?>
<ruleset name="Origo">
    <description>The Origo coding standard.</description>

    <!-- Include the whole Symfony2 standard -->
    <rule ref="Symfony2"/>

    <rule ref="Zend.NamingConventions.ValidVariableName.NotCamelCaps">
        <severity>0</severity>
    </rule>
    <rule ref="Zend.NamingConventions.ValidVariableName.MemberVarNotCamelCaps">
        <severity>0</severity>
    </rule>
    <rule ref="Zend.NamingConventions.ValidVariableName.StringVarNotCamelCaps">
        <severity>0</severity>
    </rule>
    <rule ref="Symfony2.Commenting.FunctionComment.Missing"> 
        <severity>0</severity> 
    </rule> 
</ruleset>
